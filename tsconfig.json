{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "removeComments": true,
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "types": [
            // add node as an option
            "node",
        ],
        "typeRoots": [
            // add path to @types
            "node_modules/@types",
                        "./types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules", "typings"
    ]
}